<Window x:Class="Avia.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avia"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Grid>
        <Button Name="allFlights" Content="Все рейсы" HorizontalAlignment="Left" Height="81" Margin="161,99,0,0" VerticalAlignment="Top" Width="503" Click="allFlights_Click" Cursor="Hand" BorderBrush="#FF0A0A0A" Background="#FFFAEFFB" FontFamily="Cascadia Code SemiBold" FontSize="30"/>
        <Button Name="favoriteFlights" Content="Избранное" HorizontalAlignment="Left" Height="78" Margin="161,249,0,0" VerticalAlignment="Top" Width="503" Click="favoriteFlights_Click" Cursor="Hand" BorderBrush="#FF0A0A0A" Background="#FFFAEFFB" FontFamily="Cascadia Code SemiBold" FontSize="30"/>
        <Button Name ="infoBtn" Content="👨🏼‍💻" HorizontalAlignment="Left" Height="60" Margin="735,0,0,0" VerticalAlignment="Top" Width="65" BorderBrush="White" Background="White" FontSize="35" Click="infoBtn_Click"/>
    </Grid>
</Window>
