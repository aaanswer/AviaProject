<Window x:Class="Avia.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avia"
        mc:Ignorable="d"
        Title="ForgotPassword" Height="450" Width="800">
    <Grid>
        <Button Name ="nextBtn" Content="Отправить письмо" HorizontalAlignment="Left" Height="55" Margin="271,270,0,0" VerticalAlignment="Top" Width="245" Click="nextBtn_Click" Cursor="Hand" BorderBrush="#FF0A0A0A" Background="#FFFAEFFB" FontFamily="Cascadia Code SemiBold" FontSize="20"/>
       
        <TextBox Name="mailBox" Text="Введите почту" HorizontalAlignment="Center" Height="25" Margin="0,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="352" BorderBrush="White" FontFamily="Cascadia Mono SemiLight" FontSize="16"/>
    </Grid>
</Window>
